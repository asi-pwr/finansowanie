= form_with(model: faculty, local: true) do |form|
  - if faculty.errors.any?
    .error_explanation
      %h2= "#{pluralize(@faculty.errors.count, "error")} prohibited this faculty from being saved:"
      %ul
      - @faculty.errors.full_messages.each do |message|
        %li= message

  .field
    = form.label :name, t("faculties.faculty_name")
    = form.text_field :name, id: :faculty_name

  .actions
    = form.submit "Zapisz"
