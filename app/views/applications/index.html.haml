%h1.text-center Wnioski K 
.table-responsive.table.table-hover.table-striped
  %table.table.table-hover
    %thead.table-primary
      %tr
        %th Nazwa
        %th Koordynator
        %th Organizacja
        %th Data utworzenia wniosku
        %th Stan

    %tbody
      - @applications.each do |application|
        %tr
          %td
            = application.name
            %a.fas.fa-eye{:href => application_path(application) }
          %td= application.coordinator
          - organization = Organization.find(application.organization_id)
          %td= organization.name
          %td= application.created_at.to_formatted_s(:db)
          -if application.pending?
            %td.p-0.bg-warning.dropdown-toggle.align-middle.text-center{ :id => "applicationDropdown" + application.id.to_s, "data-toggle" => "dropdown" } 
              Oczekujący
              .dropdown-menu.p-0
                %a.dropdown-item.bg-warning{ :href => "#" } Oczekujący
                %a.dropdown-item.bg-success{ :href => "#" } Zaakceptowany
                %a.dropdown-item.bg-danger{ :href => "#" } Odrzucony
          -elsif application.accepted?
            %td.p-0.bg-success.dropdown-toggle.align-middle.text-center{ :id => "applicationDropdown" + application.id.to_s, "data-toggle" => "dropdown" } 
              Zaakceptowany
              .dropdown-menu.p-0
                %a.dropdown-item.bg-warning{ :href => "#" } Oczekujący
                %a.dropdown-item.bg-success{ :href => "#" } Zaakceptowany
                %a.dropdown-item.bg-danger{ :href => "#" } Odrzucony
          -elsif application.rejected?
            %td.p-0.bg-danger.dropdown-toggle.align-middle.text-center{ :id => "applicationDropdown" + application.id.to_s, "data-toggle" => "dropdown" } 
              Odrzucony
              .dropdown-menu.p-0
                %a.dropdown-item.bg-warning{ :href => "#" } Oczekujący
                %a.dropdown-item.bg-success{ :href => "#" } Zaakceptowany
                %a.dropdown-item.bg-danger{ :href => "#" } Odrzucony
          -else
            %td

%a.btn.btn-primary.btn-block.rounded-sm{ :href => '#' }
