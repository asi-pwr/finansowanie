= content_tag :div, class: "nested-fields", data: { new_record: f.object.new_record? } do
  .container.schedule_items_row.w-100.my-4.p-3.border.border-secondary
    .row
      .col-md-4
        = f.input :todo , label: t(".todo"), input_html: { class: "disable_empty" }
      .col-md-4
        = f.input :start_date, label: t('.start_date')
      .col-md-4
        = f.input :due_date, label: t(".due_date")
    %small= link_to "Remove", "#", class: "btn btn-primary", data: { action: "click->nested-form#remove_association" }
    = f.hidden_field :_destroy
