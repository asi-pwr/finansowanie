%h2.text-center
  = t("layouts.header.sign_up")
= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = f.error_notification
  .form-inputs
    = f.input :email, label: t(:email), required: true, autofocus: true
    = f.input :password, label: t(:password), required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length)
    = f.input :password_confirmation, label: t('.password_confirmation'), required: true
    = f.input :full_name, label: t('.full_name'), required: true
  .form-actions
    = f.button :submit, t('.sign_up')
= render "devise/shared/links"
